<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColor1</item>
        <item name="colorPrimaryDark">?themeColor2</item>
        <item name="colorAccent">?themeColor3</item>
        <item name="textGrey">@color/hint</item>
        <item name="android:textColorSecondary">@color/hint</item>
        <item name="android:windowBackground">?themeColor1</item>
        <item name="android:textColorPrimary">?themeColor4</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
